<%- include("partials/header") %>
<div class="home-page">
    <h1>Want to know how is the weather today?</h1>
    <form action="/" method=POST>
        <div class="row form-fields">
            <label for="city" class="form-label">Enter a city name: </label>
            <div class="col-sm-8">
                <input class="form-control form-control-lg" type="text" id="city" name="cityName">
            </div>
            <div class="col-sm-2">
                <input type="submit" value="Get the weather" class="btn btn-lg btn-dark">    
            </div>
        </div>
    </form>    
</div>
